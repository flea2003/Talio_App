<ScrollPane style="-fx-border-color: black; -fx-border-width: 2;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.TaskViewCtrl">
   <content>
      <VBox>
         <children>
            <HBox>
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Text fx:id="taskNo" strokeType="OUTSIDE" strokeWidth="0.0" text="Task no.      " />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox>
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Text fx:id="taskName" strokeType="OUTSIDE" strokeWidth="0.0" text="Task Name" textAlignment="CENTER">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Text>
                  <Region HBox.hgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Description" wrappingWidth="122.13672256469727">
               <font>
                  <Font size="18.0" />
               </font>
            </Text>
            <Pane style="-fx-background-color: #d3d3d3; -fx-padding: 10px; -fx-border-radius: 10px;">
               <children>
                  <Text fx:id="taskDescription" layoutX="5.0" layoutY="34.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat." wrappingWidth="557.4701118469238">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Text>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Pane>
            <VBox fx:id="subTasks">
               <children>
                  <HBox>
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Task List">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Text>
                        <Button fx:id="addSubtask" mnemonicParsing="false" onAction="#addSubtask" text="Add">
                           <HBox.margin>
                              <Insets left="20.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
            <HBox>
               <children>
                  <Button fx:id="edit1" mnemonicParsing="false" onAction="#goEdit" prefHeight="25.0" prefWidth="60.0" style="-fx-border-style: none; -fx-cursor: pointer; -fx-padding: 0; -fx-margin: 0;" stylesheets="@../../CSS/stylesheet.css" text="Edit" />
                  <Button fx:id="done1" mnemonicParsing="false" onAction="#setDone" prefHeight="25.0" prefWidth="60.0" style="-fx-cursor: pointer;" stylesheets="@../../CSS/stylesheet.css" text="Done" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Text fx:id="error1" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" />
                  <Button id="edit-button" fx:id="delete1" mnemonicParsing="false" onAction="#goDelete" prefHeight="25.0" prefWidth="60.0" stylesheets="@../../CSS/stylesheet.css" text="Delete" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </content>
