<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<ScrollPane style="-fx-border-color: black; -fx-border-width: 2;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.TaskViewCtrl">
   <content>
      <VBox>
         <children>
            <HBox>
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Text fx:id="taskNo" strokeType="OUTSIDE" strokeWidth="0.0" text="Task no.      " />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox>
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Text fx:id="taskName" strokeType="OUTSIDE" strokeWidth="0.0" text="Task Name" textAlignment="CENTER">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Text>
                  <Region HBox.hgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox>
               <children>
                  <Text fx:id="description" strokeType="OUTSIDE" strokeWidth="0.0" text="Description">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Text>
               </children>
            </HBox>
            <TextFlow fx:id="descriptionPane" prefHeight="60.0" prefWidth="400.0" style="-fx-background-color: grey;">
               <children>
                  <Text fx:id="taskDescription" strokeType="OUTSIDE" strokeWidth="0.0">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Text>
               </children>
            </TextFlow>
            <VBox fx:id="subTasks">
               <children>
                  <HBox fx:id="taskListHBox">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Task List">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Text>
                     </children>
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
            <HBox>
               <children>
                  <Button fx:id="done1" mnemonicParsing="false" onAction="#setDone" prefHeight="25.0" prefWidth="60.0" style="-fx-cursor: pointer;" stylesheets="@../../CSS/stylesheet.css" text="Done" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Text fx:id="error1" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" />
                  <Button id="edit-button" fx:id="delete1" mnemonicParsing="false" onAction="#goDelete" prefHeight="25.0" prefWidth="60.0" stylesheets="@../../CSS/stylesheet.css" text="Delete" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane>
